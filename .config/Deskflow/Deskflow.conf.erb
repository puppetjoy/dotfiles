<% case @facts['networking']['hostname'] -%>
<% when 'falcon' -%>
section: screens
    falcon:
    caracara:
end

section: options
    protocol = barrier
    keystroke(super+alt+up) = switchToScreen(caracara)
    keystroke(super+alt+right) = switchToScreen(falcon)
    mousebutton(6) = keystroke(WWWBack)
    mousebutton(7) = keystroke(WWWForward)
end
<% when 'hawk' -%>
section: screens
    hawk:
    falcon:
    owl:
end

section: options
    protocol = barrier
    keystroke(super+alt+right) = switchToScreen(falcon)
    keystroke(super+alt+left) = switchToScreen(hawk)
    keystroke(super+alt+up) = switchToScreen(owl)
    keystroke(super+alt+down) = switchToScreen(hawk)
end
<% end -%>
