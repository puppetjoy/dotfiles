<% case @facts['networking']['hostname'] -%>
<% when 'falcon' -%>
section: screens
    falcon:
    caracara:
end

section: options
    keystroke(super+alt+up) = switchToScreen(caracara)
    keystroke(super+alt+right) = switchToScreen(falcon)
    mousebutton(6) = keystroke(WWWBack)
    mousebutton(7) = keystroke(WWWForward)
end
<% end -%>
