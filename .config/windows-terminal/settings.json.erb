<% windows_username = @facts['identity']['user'].to_s.sub(%r{.*[\\/]}, '') -%>
{
  "$schema": "https://aka.ms/terminal-profiles-schema",
  "alwaysShowTabs": false,
  "showTabsInTitlebar": false,
  "defaultProfile": "{6c6d2be2-a7a8-4a38-bf3b-d0dd57f53af2}",
  "profiles": {
    "defaults": {
      "font": {
        "face": "Hack",
        "size": 10.0
      },
      "historySize": 100000,
      "padding": 2,
      "scrollbarState": "hidden"
    },
    "list": [
      {
        "guid": "{6c6d2be2-a7a8-4a38-bf3b-d0dd57f53af2}",
        "name": "Cygwin zsh",
        "commandline": "C:/tools/cygwin/bin/zsh.exe -li",
        "startingDirectory": "C:/tools/cygwin/home/<%= windows_username %>",
        "icon": "C:/tools/cygwin/Cygwin-Terminal.ico",
        "suppressApplicationTitle": false,
        "cursorShape": "filledBox",
        "environment": {
          "TERM": "xterm-256color-powerline"
        }
      },
      {
        "guid": "{d5dbf8f2-3cea-4f62-8d88-4ba4f43cf6ca}",
        "name": "Cygwin zsh (keep open)",
        "hidden": true,
        "commandline": "C:/tools/cygwin/bin/zsh.exe -li",
        "startingDirectory": "C:/tools/cygwin/home/<%= windows_username %>",
        "icon": "C:/tools/cygwin/Cygwin-Terminal.ico",
        "suppressApplicationTitle": false,
        "cursorShape": "filledBox",
        "closeOnExit": "never",
        "environment": {
          "TERM": "xterm-256color-powerline",
          "NO_AUTO_TMUX": "1"
        }
      }
    ]
  }
}
